<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daybook.AlarmCreateActivity">

    <TextView
        android:id="@+id/createAlarmTitle"
        android:layout_width="560dp"
        android:layout_height="wrap_content"
        android:text="@string/createAlarmTitle"
        android:textSize="14pt"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:textColor="@color/jet"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </TextView>

    <TextView
        android:id="@+id/alarmTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showTimePickerDialog"
        android:text="@string/timeText"
        android:layout_marginBottom="90dp"
        android:layout_above="@+id/createAlarm"
        android:textSize="30dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/createAlarm"
        android:layout_height="wrap_content"
        android:text="@string/createAlarm"
        android:background="@color/jet"
        android:textColor="@color/white"
        android:onClick="createAlarm"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="193dp">
    </Button>
</RelativeLayout>
