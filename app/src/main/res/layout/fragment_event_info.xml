<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.daybook.EventInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/eventTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/titleText" />

    <TextView
        android:id="@+id/eventDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/eventTitleTextView"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@+id/eventTitleTextView"
        android:layout_alignStart="@+id/eventTitleTextView"
        android:layout_alignRight="@+id/eventTitleTextView"
        android:layout_alignEnd="@+id/eventTitleTextView"
        android:text="@string/dateText" />

    <TextView
        android:id="@+id/eventDescTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/eventDateTextView"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@+id/eventDateTextView"
        android:layout_alignStart="@+id/eventDateTextView"
        android:layout_alignRight="@+id/eventDateTextView"
        android:layout_alignEnd="@+id/eventDateTextView"
        android:layout_marginTop="50dp"
        android:text="@string/descText"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/eventEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_icon="@drawable/ic_create_black_24dp"
        fab:fab_colorNormal="@color/white"
        fab:fab_colorPressed="@color/white_pressed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"/>
</RelativeLayout>
