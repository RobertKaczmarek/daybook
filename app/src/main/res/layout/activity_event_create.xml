<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daybook.EventCreateActivity">


    <TextView
        android:id="@+id/createEventTitle"
        android:layout_width="560dp"
        android:layout_height="wrap_content"
        android:text="@string/createEventTitle"
        android:paddingLeft="15dp"
        android:textSize="10pt">
    </TextView>

    <EditText
        android:id="@+id/eventTitle"
        android:layout_height="wrap_content"
        android:hint="@string/eventTitle"
        android:layout_width="fill_parent"
        android:layout_above="@+id/eventDescription"
        android:layout_marginBottom="17dp">
    </EditText>

    <EditText
        android:id="@+id/eventDescription"
        android:layout_height="210dp"
        android:hint="@string/eventDescription"
        android:inputType="textMultiLine"
        android:lines="10"
        android:gravity="top"
        android:paddingLeft="7dp"
        android:layout_width="fill_parent"
        android:layout_above="@+id/setEventDate"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp">
    </EditText>

    <Button
        android:id="@+id/createEvent"
        android:layout_height="wrap_content"
        android:text="@string/createEvent"
        android:onClick="createEvent"
        android:layout_width="fill_parent"
        android:background="@color/jet"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp">
    </Button>

    <Button
        android:id="@+id/setEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/createEvent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:onClick="showDatePickerDialog"
        android:text="@string/eventDate" />

    <TextView
        android:id="@+id/eventDateView"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/setEventDate"
        android:layout_alignBottom="@+id/setEventDate"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp"
        android:text="@string/dateText" />
</RelativeLayout>