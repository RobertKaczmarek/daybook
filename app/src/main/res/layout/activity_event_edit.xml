<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daybook.EventEditActivity">


    <TextView
        android:id="@+id/eventEditTitleView"
        android:layout_width="560dp"
        android:layout_height="wrap_content"
        android:text="@string/editEventTitle"
        android:textSize="10pt">
    </TextView>

    <EditText
        android:id="@+id/eventEditTitle"
        android:layout_height="wrap_content"
        android:hint="@string/eventTitle"
        android:layout_width="fill_parent"
        android:layout_below="@+id/eventEditTitleView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp">
    </EditText>

    <EditText
        android:id="@+id/eventEditDescription"
        android:layout_height="210dp"
        android:hint="@string/eventDescription"
        android:inputType="textMultiLine"
        android:lines="10"
        android:gravity="top"
        android:paddingLeft="7dp"
        android:background="@color/monsoon"
        android:layout_width="fill_parent"
        android:layout_above="@+id/setEventEditDate"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp">
    </EditText>

    <Button
        android:id="@+id/saveEditEvent"
        android:layout_height="wrap_content"
        android:text="@string/editEvent"
        android:onClick="updateEvent"
        android:layout_width="fill_parent"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </Button>

    <Button
        android:id="@+id/setEventEditDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:onClick="showDatePickerDialog"
        android:text="@string/eventDate"
        android:layout_above="@+id/saveEditEvent"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/eventDateEditView"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:text="Event's date"
        android:layout_alignBaseline="@+id/setEventEditDate"
        android:layout_alignBottom="@+id/setEventEditDate"
        android:layout_toEndOf="@+id/setEventEditDate"
        android:layout_marginStart="23dp" />
</RelativeLayout>